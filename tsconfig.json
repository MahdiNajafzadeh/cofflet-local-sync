{
  "compilerOptions": {
    "target": "ES2020",                          // Use the most suitable ECMAScript version for modern Node.js
    "module": "ES2020",                          // Enable ES module syntax
    "moduleResolution": "node",                  // Resolve modules using Node.js conventions
    "esModuleInterop": true,                     // Enables interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,    // Enforce consistent casing in file names
    "strict": true,                              // Enable all strict type-checking options
    "skipLibCheck": true,                        // Skip type-checking of declaration files to speed up compilation
    "outDir": "./dist",                          // Specify the output directory for compiled files
    "rootDir": "./src",                          // Specify the root directory of input files
    "resolveJsonModule": true,                   // Allow importing .json files
    "isolatedModules": true,                     // Ensure each file is treated as a module
    "noEmitOnError": true,                       // Avoid emitting files if there are errors
    "allowSyntheticDefaultImports": true,        // Allow default imports from modules with no default export
    "noUnusedLocals": true,                      // Report errors on unused locals
    "noUnusedParameters": true,                  // Report errors on unused parameters
    "noImplicitReturns": true,                   // Ensure all functions return a value
    "noFallthroughCasesInSwitch": true,          // Ensure no fallthrough in switch cases
    "strictNullChecks": true,                    // Enable strict null checks
    "strictPropertyInitialization": true,        // Ensure class properties are initialized in the constructor
    "baseUrl": ".",                              // Base directory to resolve non-relative module names
    "paths": {                                   // Setup custom module resolution paths
      "@/*": ["src/*"]
    },
    "types": ["node"],                           // Include type definitions for Node.js
    "lib": ["ES2020"],                           // Include the default library for the ES2020 target
    "incremental": true                          // Enable incremental compilation for faster rebuilds
  },
  "include": ["src/**/*"],                        // Specify the files to include in the project
  "exclude": ["node_modules", "dist"]             // Exclude the node_modules and dist directories
}
